// backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ... (Model User, Post, Category tetap sama) ...

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  role      Role     @default(USER)
  posts     Post[]
}

model Post {
  id          Int       @id @default(autoincrement())
  title       String
  content     String?
  imageUrl    String?
  canBeCopied Boolean   @default(true)
  status      Status    @default(DRAFT)
  publishedAt DateTime  @default(now())
  author      User      @relation(fields: [authorId], references: [id])
  authorId    Int
  category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  Int?
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  posts Post[]
}

// TAMBAHKAN MODEL BARU DI SINI
model Promo {
  id          Int     @id @default(autoincrement())
  title       String
  subtitle    String?
  imageUrl    String?
  buttonText  String?
  buttonLink  String?
  isActive    Boolean @default(true)
}

enum Role {
  USER
  ADMIN
  ADMINISTRATOR
}

enum Status {
  DRAFT
  PUBLISHED
}